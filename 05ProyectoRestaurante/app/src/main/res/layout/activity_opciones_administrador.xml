<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackground1"
        tools:context=".MainActivity">

    <android.support.constraint.ConstraintLayout
            android:layout_width="335dp"
            android:layout_height="584dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="5dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="5dp" app:layout_constraintStart_toStartOf="parent"
            android:background="@color/colorBackground2"

            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintVertical_bias="0.49">

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/chef"
                android:id="@+id/imageView" android:layout_marginTop="68dp"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"/>
        <Button
                android:text="@string/txtAdminPlatos"
                android:layout_width="200dp"
                android:layout_height="70dp"
                android:background="@color/colorBackground1"
                android:textColor="@color/colorBlanco"
                android:layout_marginTop="60dp"
                app:layout_constraintTop_toBottomOf="@+id/imageView" android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent" android:id="@+id/btn_adminPlato"
                app:layout_constraintHorizontal_bias="0.495"/>
        <Button
                android:text="@string/txtAdminCombos"
                android:layout_width="200dp"
                android:layout_height="70dp"
                android:background="@color/colorBackground1"
                android:textColor="@color/colorBlanco"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent" android:id="@+id/btn_adminCombo"
                app:layout_constraintHorizontal_bias="0.495" android:layout_marginTop="56dp"
                app:layout_constraintTop_toBottomOf="@+id/btn_adminPlato" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"/>

    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>