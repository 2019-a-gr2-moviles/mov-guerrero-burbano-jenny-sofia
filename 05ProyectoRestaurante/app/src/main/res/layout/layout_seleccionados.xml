<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content"
                                             android:id="@+id/layout_seleccionados">

    <TextView
            android:text="TextView"
            android:layout_width="85dp"
            android:layout_height="32dp"

            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/txts_nombre"
            app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:text="TextView"
            android:layout_width="102dp"
            android:layout_height="32dp"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/txts_descripcion" app:layout_constraintStart_toEndOf="@+id/txts_nombre"
    />
    <TextView
            android:text="TextView"
            android:layout_width="56dp"
            android:layout_height="32dp"
            android:id="@+id/txts_precio"
            app:layout_constraintStart_toEndOf="@+id/txts_descripcion" app:layout_constraintTop_toTopOf="parent"/>
    <ImageButton
            android:layout_width="59dp"
            android:layout_height="31dp" app:srcCompat="@drawable/cancel"
            android:id="@+id/btn_deleteSeleccionado"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toEndOf="@+id/txts_precio"
    />
</android.support.constraint.ConstraintLayout>