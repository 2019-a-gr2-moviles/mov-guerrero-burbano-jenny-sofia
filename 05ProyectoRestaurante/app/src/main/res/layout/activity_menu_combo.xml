<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackground1"
        tools:context=".MainActivity">


    <android.support.constraint.ConstraintLayout
            android:layout_width="346dp"
            android:layout_height="585dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="5dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="5dp" app:layout_constraintStart_toStartOf="parent"
            android:background="@color/colorBackground2"

            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintVertical_bias="0.49">

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/chef_small"
                android:id="@+id/imageView" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"/>

        <EditText
                android:layout_width="273dp"
                android:layout_height="48dp"
                android:inputType="textPersonName"
                android:ems="10"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent"
                android:background="@drawable/borde_busqueda"
                android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/imageView"
                android:id="@+id/inputc_busqueda"/>
        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/search"
                android:background="@color/colorBackground2"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                app:layout_constraintTop_toBottomOf="@+id/imageView"
                android:layout_marginTop="20dp" app:layout_constraintStart_toEndOf="@+id/inputc_busqueda"
                android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toTopOf="@+id/textView3" app:layout_constraintHorizontal_bias="0.428"
                app:layout_constraintVertical_bias="0.357"/>

        <Button
                android:text="@string/txtNuevoPlato"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/btn_nuevoPlato"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:background="@color/colorBackground1"
                android:textColor="@color/colorBlanco"
                android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/rv_combo"/>
        <android.support.v7.widget.RecyclerView
                android:layout_width="352dp"
                android:layout_height="363dp"
                app:layout_constraintTop_toBottomOf="@+id/inputc_busqueda" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" android:id="@+id/rv_combo"
                android:layout_marginTop="32dp" app:layout_constraintHorizontal_bias="0.0"
        />
        <TextView
                android:text="@string/txtNombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView"
                app:layout_constraintTop_toBottomOf="@+id/inputc_busqueda" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintBottom_toTopOf="@+id/rv_combo"/>
        <TextView
                android:text="@string/txtPrecio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView3" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/inputc_busqueda"
                app:layout_constraintStart_toEndOf="@+id/textView"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toTopOf="@+id/rv_combo" app:layout_constraintHorizontal_bias="0.292"
                app:layout_constraintVertical_bias="0.4"/>

    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>