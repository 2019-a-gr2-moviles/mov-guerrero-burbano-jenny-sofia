<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackground1"
        tools:context=".GestionComboActivity">

    <android.support.constraint.ConstraintLayout
            android:layout_width="331dp"
            android:background="@color/colorBackground2"
            android:layout_height="662dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"

            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.49">

        <android.support.v7.widget.RecyclerView
                android:layout_width="318dp"
                android:layout_height="259dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                android:id="@+id/rv_disponibles"
                app:layout_constraintTop_toBottomOf="@+id/textView4" android:layout_marginTop="12dp"
                app:layout_constraintHorizontal_bias="0.0"/>
        <TextView
                android:text="@string/txtPlatosDisponibles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView4"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="60dp"/>
        <TextView
                android:text="@string/txtPlatosSeleccionados"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:id="@+id/textView5" android:layout_marginTop="44dp"
                app:layout_constraintTop_toBottomOf="@+id/rv_disponibles" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" app:layout_constraintHorizontal_bias="0.497"/>
        <android.support.v7.widget.RecyclerView
                android:layout_width="282dp"
                android:layout_height="189dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView5" android:layout_marginTop="24dp"
                android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/rv_seleccionados" app:layout_constraintHorizontal_bias="0.585"/>
    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>