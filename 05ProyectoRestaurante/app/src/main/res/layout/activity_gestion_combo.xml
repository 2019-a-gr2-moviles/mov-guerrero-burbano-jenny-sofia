<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackground1"
        tools:context=".GestionComboActivity">

    <android.support.constraint.ConstraintLayout
            android:layout_width="331dp"
            android:background="@color/colorBackground2"
            android:layout_height="662dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"

            app:layout_constraintBottom_toBottomOf="parent">

        <android.support.v7.widget.RecyclerView
                android:layout_width="323dp"
                android:layout_height="223dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                android:id="@+id/recyclerView3"
                app:layout_constraintTop_toBottomOf="@+id/textView4"/>
        <TextView
                android:text="@string/txtPlatosDisponibles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView4"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" tools:layout_editor_absoluteY="90dp"/>
        <TextView
                android:text="@string/txtPlatosSeleccionados"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:id="@+id/textView5" android:layout_marginTop="36dp"
                app:layout_constraintTop_toBottomOf="@+id/recyclerView3" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" app:layout_constraintHorizontal_bias="0.497"/>
        <android.support.v7.widget.RecyclerView
                android:layout_width="328dp"
                android:layout_height="230dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView5" android:layout_marginTop="12dp"
                android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"/>
    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>