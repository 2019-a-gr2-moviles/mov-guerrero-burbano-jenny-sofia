<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal" android:id="@+id/linear_layout">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_weight="1">
        <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="41dp" android:id="@+id/txt_contacto"/>
        <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="70dp" android:id="@+id/txt_contenidoMensaje"/>
    </LinearLayout>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="40dp" android:id="@+id/txt_numeroMensajes" android:layout_weight="0.05"/>
</LinearLayout>
